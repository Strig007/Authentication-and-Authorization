@model FourthWebApp.Models.Entities.User
@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>

<form action="/Login/Login" method="post">
    Username: <input type="text" name="Username" class="form-control" placeholder="Username"/>
    @Html.ValidationMessageFor(m => m.Username, "", new {@class = "text-danger"}) <br>

    Password: <input type="password" name="Password" class="form-control" placeholder="Password" />
    @Html.ValidationMessageFor(m => m.Password, "", new {@class = "text-danger"}) <br />

    <input type="submit" value="Login" class="btn btn-success"/>
</form>